                    <xpf:string>...</xpf:string>
                </xpf:array>
                <xpf:string key="id">urn:pearson:work:dc47c459-7d3d-4cf7-b093-437f27b3284d</xpf:string>
                <xpf:map key="name">
                    <xpf:string key="en">...</xpf:string>
                </xpf:map>
                <xpf:string key="dateCreated">...</xpf:string>
                <xpf:map key="keyword">
                    <xpf:array key="en">
